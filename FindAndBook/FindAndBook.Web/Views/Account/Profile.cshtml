@model FindAndBook.Web.Models.Account.ProfileViewModel
@{
    ViewBag.Title = "Profile";
}
@Styles.Render("~/Content/profile.css")
<div class="container" style="margin-top: 30px;">
    <div class="profile-head">
        <div class="col-sm-4 col-xs-12">
            <img src="http://ishowmy.support/img/user-icon-360x360.jpg" class="img-responsive" />
        </div>
        <div class="col-md-5 col-sm-5 col-xs-12">
            <h5>@Model.FullName</h5>
            <p>@Model.Username </p>
            <ul>
                <li><span class="glyphicon glyphicon-phone"></span>@Model.PhoneNumber</li>
                <li><span class="glyphicon glyphicon-envelope"></span>@Model.Email</li>
            </ul>
        </div>
    </div>
</div>

@if (Model.IsCurrentUser)
{
    if (Model.Bookings.Count > 0)
    {
        <div class="container">
            @Html.Partial("_Bookings", Model)
        </div>
    }
    else
    {
        <div class="container col-md-offset-5">
            <h3>You have no bookings yet!</h3>
        </div>
    }

}
