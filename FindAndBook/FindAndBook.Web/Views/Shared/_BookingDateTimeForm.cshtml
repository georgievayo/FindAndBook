@model FindAndBook.Web.Models.Places.BookingViewModel
@using (Ajax.BeginForm("GetAvailableTables", new { controller = "Bookings" },
                new AjaxOptions { UpdateTargetId = "book-form", InsertionMode = InsertionMode.Replace }))
{
    @Html.HiddenFor(x => x.PlaceId)

    <div class="container">
        <div class="row">
            <div class='col-sm-6'>
                <div class="form-group">
                    <h5><span><i class="glyphicon glyphicon-calendar"></i></span> Select date and time if you want to see available tables</h5>
                    <div class='input-group'>
                        @Html.EditorFor(m => m.DateTime, new
                        {
                            htmlAttributes = new
                            {
                                @class = "form-control", id = "datetimepicker1", name = "dateTime"
                            }
                        })

                    </div>
                </div>
                <input type="submit" value="See available tables" class="add-to-cart btn btn-default" />
            </div>
            
        </div>
    </div>
    <div class="container" id="book-tables"></div>
}