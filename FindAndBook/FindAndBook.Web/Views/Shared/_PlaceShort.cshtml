@model FindAndBook.Web.Models.Places.PlaceShortViewModel

<div class="container">
    <div class="col-md-4">
        <div class="thumbnail">
            <img src=@Model.PhotoUrl alt="" class="img-responsive img-thumbnail">
            <div class="caption">
                <h4 class="pull-right">@Model.Contact</h4>
                <h4>@Html.ActionLink(@Model.Name, "Details", "Places", new {id = @Model.Id}, null)</h4>
                <p><span class="glyphicon glyphicon-map-marker"></span>  You can find us at:</p>
                <p>@Model.Address.Country, @Model.Address.City, @Model.Address.Area, @Model.Address.Street @Model.Address.Number</p>
                <p><span class="glyphicon glyphicon-euro"></span>  Average Bill: @Model.AverageBill</p>
            </div>
            <div class="ratings">
                <p>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    (@Model.ReviewsCount reviews)
                </p>
            </div>
        </div>
    </div>
</div>