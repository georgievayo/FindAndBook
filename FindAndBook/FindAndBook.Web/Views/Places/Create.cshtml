@model FindAndBook.Web.Models.Places.CreateViewModel
@{
    ViewBag.Title = "Create Place";
}
@Styles.Render("~/Content/form.css")
@using (Html.BeginForm("Create", "Places"))
{
    @Html.AntiForgeryToken()
    <fieldset class="col-md-6 col-md-offset-3">
        <legend>Add place</legend>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-2 text-center col-md-offset-1 control-label"})
            @Html.TextBoxFor(model => model.Name, new { @class = "col-md-7 form-control" })
        </div>
        <div class="col-md-offset-2">
            @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.Types, htmlAttributes: new { @class = "col-md-2 text-center col-md-offset-1 control-label" })
            @Html.DropDownListFor(model => model.Types, Model.TypeList, new { @class = "col-md-7 form-control" })
        </div>
        <div class="form-group row">
            <label class="col-md-offset-1 text-center col-md-2 control-label">Address</label>
                
            @Html.TextBoxFor(model => model.Country, new {@class = "col-md-7  form-control", placeholder = "Country" })
            <br />
            @Html.TextBoxFor(model => model.City, new {@class = "col-md-offset-3 col-md-7 form-control", placeholder = "City"})
            <br />
            @Html.TextBoxFor(model => model.Area, new {@class = "col-md-offset-3 col-md-7 form-control", placeholder="Area" })
            <br />
            @Html.TextBoxFor(model => model.Street, new {@class = "col-md-offset-3 col-md-7 form-control", placeholder = "Street" })
            <br />
            @Html.TextBoxFor(model => model.Number, new {@class = "col-md-offset-3 col-md-7 form-control", placeholder = "Number" })
            <div class="">
                @Html.ValidationMessageFor(model => model.Country, null, new { @class = "text-danger" })
                <br />
                @Html.ValidationMessageFor(model => model.City, null, new { @class = "text-danger" })
                <br />
                @Html.ValidationMessageFor(model => model.Area, null, new { @class = "text-danger" })
                <br />
                @Html.ValidationMessageFor(model => model.Street, null, new { @class = "text-danger" })
                <br />
                @Html.ValidationMessageFor(model => model.Number, null, new { @class = "text-danger" })   
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Contact, new { @class = "col-md-offset-1 text-center col-md-2 control-label" })
            @Html.TextBoxFor(model => model.Contact, new { @class = "col-md-7 form-control" })
        </div>
        <div class="col-md-offset-2">
            @Html.ValidationMessageFor(model => model.Contact, null, new { @class = "text-danger" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.Description, new { @class = "col-md-offset-1 text-center col-md-2 control-label" })
            @Html.TextAreaFor(model => model.Description, new { @class = "col-md-7 form-control", rows="10" })
        </div>
        <div class="col-md-offset-2">
            @Html.ValidationMessageFor(model => model.Description, null, new { @class = "text-danger" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.WeekdayHours, htmlAttributes: new { @class = "col-md-offset-1 text-center col-md-2 control-label" })
            @Html.TextBoxFor(model => model.WeekdayHours, new { @class = "col-md-7 form-control", placeholder="00:00 - 00:00" })
        </div>
        <div class="col-md-offset-2">
            @Html.ValidationMessageFor(model => model.WeekdayHours, null, new { @class = "text-danger" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.WeekendHours, htmlAttributes: new { @class = "col-md-offset-1 text-center col-md-2 control-label" })
            @Html.TextBoxFor(model => model.WeekendHours, new { @class = "col-md-7 form-control", placeholder = "00:00 - 00:00" })
        </div>
        <div class="col-md-offset-2">
            @Html.ValidationMessageFor(model => model.WeekendHours, null, new { @class = "text-danger" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.AverageBill, htmlAttributes: new { @class = "col-md-offset-1 text-center col-md-2 control-label" })
            @Html.TextBoxFor(model => model.AverageBill, new { @class = "col-md-7 form-control" })
        </div>
        <div class="col-md-offset-2">
            @Html.ValidationMessageFor(model => model.AverageBill, null, new { @class = "text-danger" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.TwoPeopleCount, htmlAttributes: new { @class = "col-md-offset-1 text-center col-md-2 control-label" })
            @Html.TextBoxFor(model => model.TwoPeopleCount, new { @class = "col-md-7 form-control", type = "number" })
        </div>
        <div class="col-md-offset-2">
            @Html.ValidationMessageFor(model => model.TwoPeopleCount, null, new { @class = "text-danger" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.FourPeopleCount, htmlAttributes: new { @class = "col-md-offset-1 text-center col-md-2 control-label" })
            @Html.TextBoxFor(model => model.FourPeopleCount, new { @class = "col-md-7 form-control", type = "number" } )
        </div>
        <div class="col-md-offset-2">
            @Html.ValidationMessageFor(model => model.FourPeopleCount, null, new { @class = "text-danger" })
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.SixPeopleCount, htmlAttributes: new { @class = "col-md-offset-1 text-center col-md-2 control-label" })
            @Html.TextBoxFor(model => model.SixPeopleCount, new { @class = "col-md-7 form-control", type="number" })
        </div>
        <div class="col-md-offset-2">
            @Html.ValidationMessageFor(model => model.SixPeopleCount, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-3">
                <button type="submit" class="btn col-md-3">Submit</button>
            </div>
        </div>
    </fieldset>
}